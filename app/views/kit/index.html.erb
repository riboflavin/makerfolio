<% content_for :css do %>
	<%= include_stylesheets :all, :kit, :media => "all" %>
<% end %>

<div id="container">
  <div id="content" class="container">
    <div id="content-inner" class="k-shadow-big">

<% if @editable %> 
<%= render :partial => "editview", :locals => { :kit => @kit, :user => @user, :attachments => @attachments } %>
<% else %>
<%= render :partial => "publishedview", :locals => { :kit => @kit, :user => @user, :attachments => @attachments } %>
<% end %>

    </div>
  </div>
</div>

<% content_for :js do %>
	<%= include_javascripts :all, :kit %>
<script>
$(function() {
			Kitify.Manager({
				components: {
					kitNav: Kitify.KitNav(),
					newStep: Kitify.NewStep(),
					editStep: Kitify.EditStep(),
					kitSteps: Kitify.KitSteps(),
					reorderSteps: Kitify.KitReorderStep(),
					instructionsHost: Kitify.InstructionsHost(),
					newItem: Kitify.NewItem(),
					editItem: Kitify.EditItem(),
					kitItems: Kitify.KitItems(),
					kitParams: Kitify.KitParams(),
					kitPublish: Kitify.KitPublish(),
                    kitImage: Kitify.KitImage(),
                    kitCustomize: Kitify.KitCustomize(),
                    Util: Kitify.Util()
				}
			}).init();
		});
</script>
<% end %>